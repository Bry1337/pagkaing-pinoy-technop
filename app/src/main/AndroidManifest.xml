<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pp.pagkaingpinoy">

  <application
      android:name=".dagger.application.BaseApplication"
      android:allowBackup="true"
      android:icon="@drawable/ic_logo"
      android:label="@string/app_name"
      android:roundIcon="@drawable/ic_logo"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
        android:name=".ui.activities.tablenumber.TableNumberActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar" />

    <activity
        android:name=".ui.activities.dashboard.DashboardActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar" />
    <activity
        android:name=".ui.activities.breakfast.BreakfastActivity"
        android:label="@string/breakfast"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar" />

    <activity
        android:name=".ui.activities.lunch.LunchActivity"
        android:label="@string/lunch"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar" />

    <activity
        android:name=".ui.activities.dinner.DinnerActivity"
        android:label="@string/dinner"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar" />
  </application>

</manifest>