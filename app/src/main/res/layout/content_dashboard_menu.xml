<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_dashboard"
    >


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_table_number"
            android:textAppearance="?android:actionMenuTextAppearance"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:id="@+id/tvTableNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:textAppearance="?android:actionMenuTextAppearance"
            android:textColor="@android:color/white"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/normal_margin"
          android:animateLayoutChanges="true"
          android:orientation="horizontal"
          >
        <TextView
            android:id="@+id/tvBreakfastOrders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_weight="1"
            android:textAppearance="?android:actionMenuTextAppearance"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/tvRemoveBreakfastOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:gravity="end"
            android:text="@string/remove_orders"
            android:textAppearance="?android:actionMenuTextAppearance"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:animateLayoutChanges="true"
          android:orientation="horizontal"
          >
        <TextView
            android:id="@+id/tvLunchOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_weight="1"
            android:textAppearance="?android:actionMenuTextAppearance"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/tvRemoveLunchOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:gravity="end"
            android:text="@string/remove_orders"
            android:textAppearance="?android:actionMenuTextAppearance"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:animateLayoutChanges="true"
          android:orientation="horizontal"
          >
        <TextView
            android:id="@+id/tvDinnerOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_weight="1"
            android:textAppearance="?android:actionMenuTextAppearance"
            android:textColor="@android:color/white"

            />

        <TextView
            android:id="@+id/tvRemoveDinnerOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:gravity="end"
            android:text="@string/remove_orders"
            android:textAppearance="?android:actionMenuTextAppearance"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:animateLayoutChanges="true"
          android:orientation="horizontal"
          >
        <TextView
            android:id="@+id/tvDessertOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_weight="1"
            android:textAppearance="?android:actionMenuTextAppearance"
            android:textColor="@android:color/white"

            />

        <TextView
            android:id="@+id/tvRemoveDessertOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:gravity="end"
            android:text="@string/remove_orders"
            android:textAppearance="?android:actionMenuTextAppearance"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:animateLayoutChanges="true"
          android:orientation="horizontal"
          >
        <TextView
            android:id="@+id/tvDrinksOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_weight="1"
            android:textAppearance="?android:actionMenuTextAppearance"
            android:textColor="@android:color/white"

            />

        <TextView
            android:id="@+id/tvRemoveDrinksOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:gravity="end"
            android:text="@string/remove_orders"
            android:textAppearance="?android:actionMenuTextAppearance"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            />

      </LinearLayout>

    </LinearLayout>

  </ScrollView>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginBottom="@dimen/big_overall_margin"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginStart="@dimen/activity_horizontal_margin"
      android:orientation="horizontal"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_amount"
        android:textAppearance="?android:actionMenuTextAppearance"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_margin"
        android:textAppearance="?android:actionMenuTextAppearance"
        android:textColor="@android:color/white"
        />

  </LinearLayout>

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/fabFinalizeOrder"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_margin="@dimen/big_overall_margin"
      android:background="?android:selectableItemBackground"
      android:padding="@dimen/normal_overall_padding"
      android:src="@drawable/ic_send"
      />

</RelativeLayout>