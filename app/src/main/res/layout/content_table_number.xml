<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_table_number"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorPrimary"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtTableNumber"
        android:layout_centerHorizontal="true"
        android:text="@string/enter_table_number"
        android:textAppearance="?actionMenuTextAppearance"
        android:textColor="@android:color/white"
        />
    <EditText
        android:id="@+id/edtTableNumber"
        android:layout_width="@dimen/table_number_width"
        android:layout_height="@dimen/table_number_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/normal_margin"
        android:background="@drawable/bg_white_edittext_semi_round_corner"
        android:gravity="center_horizontal|center_vertical"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLines="1"
        />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTableNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/normal_margin"
        android:background="@drawable/bg_blue_stroke_semi_rounded_corner"
        android:text="@string/done"
        android:textColor="@android:color/white"
        />
  </RelativeLayout>

</RelativeLayout>